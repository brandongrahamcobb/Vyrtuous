{
  "name": "Python Colima Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "vyrtuous",
  "workspaceFolder": "/app",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  
  "forwardPorts": [5678, 8080],
  "remoteUser": "root",
  
  "remoteEnv": {
    "DEBUGPY": "1"
  },

  "overrideCommand": true
}